{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/apply-job",
      "dest": "/api/apply-job.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(favicon.png|opengraph.jpg)",
      "dest": "/$1"
    },
    {
      "src": "/(?!api/)(.*)",
      "dest": "/index.html"
    }
  ]
}
